<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_cafe_main_cafe_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cafeteria" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/img_btn_cafe_main_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:src="@drawable/menu" />

            <ImageButton
                android:id="@+id/img_btn_cafe_main_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:src="@drawable/gallery" />

            <ImageButton
                android:id="@+id/img_btn_cafe_main_offers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.34"
                android:src="@drawable/sale" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_cafe_main_hookah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/coffee" />

        <TextView
            android:id="@+id/tv_cafe_main_clicking_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/clicking_text"
            android:textSize="18dp" />


    </LinearLayout>
</ScrollView>
